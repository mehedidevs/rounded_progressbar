<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"

    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <com.creativeitinstitute.segmentedprogress.roundedprogressbar.RoundedProgressBar
        android:id="@+id/advanced_bar_2"
        android:layout_width="0dp"
        android:layout_height="50dp"
        android:layout_margin="16dp"
        android:background="@drawable/dd"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:rpbBackgroundColor="@color/rpb_default_progress_bg_color"
        app:rpbBackgroundTextColor="@color/rpb_default_text_color"
        app:rpbCornerRadius="3dp"
        app:rpbCornerRadiusBottomLeft="0dp"

        app:rpbCornerRadiusTopLeft="0dp"
        app:rpbProgressColor="@color/rpb_default_progress_color"
        app:rpbProgressTextColor="#00BCD4"
        app:rpbTextSize="18sp" />

</androidx.constraintlayout.widget.ConstraintLayout>